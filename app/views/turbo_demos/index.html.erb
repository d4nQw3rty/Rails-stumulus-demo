<%= content_tag :div, class: "container-fluid d-flex gap-2" do %>
  <%= render 'menu' %>
  <%= turbo_frame_tag 'content', class: "d-flex flex-grow-1" do %>
    <%= content_tag :div, class: "d-flex flex-column flex-grow-1 border border-primary rounded-2 p-1" do %>
      <%= render '/shared/header', greeting: "Welcome! - Turbo Frame examples" %>
      <%= content_tag :div, class: "container-fluid" do %>
        <%= content_tag :h2, "The content will be loaded here", class: "text-start" %>
        <%= content_tag :p, "Click on the links to load the different contents" %>
        <%= content_tag :p, "This is a demonstration of Turbo Frames" %>
        <%= content_tag :p, "The content will be loaded without a full page refresh" %>
      <%end %>
    <% end %>
  <% end %>
<% end %>


