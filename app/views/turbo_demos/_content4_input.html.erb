<%= content_tag :div, class: "container d-flex flex-column border border-dark-subtle rounded-2 p-1 mt-3 mb-3" do %>
  <%= content_tag :div, class: "text-center" do %>
    <h2>Words Counter Demo</h2>
    <%= content_tag :div, class: "d-flex flex-column" do %>
      <% form_with url: words_counter_turbo_demos_path, method: :post, data: { turbo_stream: true }, class: "d-flex flex-column" do |form| %>
        <%= form.label :text, "Let's count the words!", class: "form-label text-start" %>
        <%= form.text_area :text, placeholder:"Enter your text here...", class: "form-control" %>
        <%= content_tag :div, class: "mt-3" do %>
          <%= form.submit "Lets count", class: "btn btn-primary" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= turbo_frame_tag "show_words", class: "container d-flex p-1 mt-3 mb-3" do %>
    <table class="table table-bordered border-primary">
      <thead>
        <tr>
          <th scope="col">Words</th>
          <th scope="col">Times words repeat</th>
          <th scope="col">Total of words</th>
          <th scope="col">Total of words not repeated</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td scope="row">No words yet</td>
          <td>0</td>
          <td>0</td>
          <td>0</td>
        </tr>        
      </tbody>
    </table>
  <% end %>
<% end %>
